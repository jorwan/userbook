<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item>
    <shape android:shape="rectangle"  >
      <corners android:radius="@dimen/fab_corner_radius" />
      <stroke android:width="0dip" />
      <gradient android:angle="-90" android:startColor="?attr/colorPrimary" android:endColor="?attr/colorPrimaryDark" />
    </shape>
  </item>
  <item>
    <selector>
      <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
          <size android:height="75dip" android:width="75dip"/>
          <corners android:radius="@dimen/fab_corner_radius" />
          <stroke android:width="1dip" android:color="?attr/colorAccent" />
          <gradient android:angle="-90" android:startColor="?attr/colorAccent" android:endColor="?attr/colorPrimaryDark"  />
        </shape>
      </item>
      <item android:state_focused="true">
        <shape android:shape="rectangle"  >
          <corners android:radius="@dimen/fab_corner_radius" />
          <stroke android:width="1dip" android:color="?attr/colorAccent" />
          <solid android:color="?attr/colorAccent"/>
        </shape>
      </item>
    </selector>
  </item>
  <item
    android:drawable="@drawable/account_plus"
    android:bottom="15dp"
    android:left="15dp"
    android:right="15dp"
    android:top="15dp" />
</layer-list>